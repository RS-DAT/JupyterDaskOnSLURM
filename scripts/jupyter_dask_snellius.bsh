#!/bin/bash
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=2  # minimum allocation on Snellius is 32 cores
#SBATCH --partition=thin # defaults are "normal" on Spider, "thin" on Snellius
#SBATCH --time=01:00:00

source ~/.bashrc
conda activate jupyter_dask

node=`hostname -s`

echo "Run the following on your local machine: "
echo "ssh -i /path/to/private/ssh/key -N -L 8889:${node}:8888 ${USER}@snellius.surf.nl"

jupyter lab --no-browser --port=8888 --ip=${node}
